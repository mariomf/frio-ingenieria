# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# WhatsApp Business API (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=your_twilio_whatsapp_number

# Site URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# AI Providers (at least one required for AI agents)
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# ===========================================
# HYBRID AI QUALIFICATION
# ===========================================

# Qualification Mode
# Options: 'hybrid' (default if ANTHROPIC_API_KEY set), 'deterministic'
# - hybrid: Use Claude for intelligent lead qualification (~$0.01-0.05/lead)
# - deterministic: Use keyword-based scoring only (free, but less accurate)
# QUALIFICATION_MODE=hybrid

# Email Service (Resend)
# Get your API key at: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key

# Email sender (requires verified domain in Resend, or use default)
# RESEND_FROM_EMAIL=ventas@frioingenieria.com

# Recipients for lead notifications (comma-separated)
# If not set, defaults to COMPANY.email from constants.ts
LEAD_NOTIFICATION_EMAILS=ventas@frioingenieria.com,gerente@frioingenieria.com

# Cron Job Security
CRON_SECRET=your_secure_random_string

# Google Maps Places API (for lead prospection)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
# Set to 'true' to disable Google Maps even if API key is configured
# DISABLE_GOOGLE_MAPS=true

# DENUE API Token (free from INEGI - for Mexican business data)
# Get your token at: https://www.inegi.org.mx/servicios/api_denue.html
DENUE_API_TOKEN=your_denue_token

# ===========================================
# LEAD ENRICHMENT SERVICES
# ===========================================

# Apollo.io (RECOMMENDED - Primary enrichment source)
# Get API key: https://app.apollo.io/#/settings/integrations/api
# Provides: company data, verified emails, decision-maker contacts
APOLLO_API_KEY=your_apollo_api_key

# Enrichment Provider Selection
# Options: 'apollo' (default), 'linkedin', 'both'
# - apollo: Use Apollo.io API (stable, verified emails)
# - linkedin: Use LinkedIn MCP (deprecated, requires Docker)
# - both: Try Apollo first, fallback to LinkedIn
# ENRICHMENT_PROVIDER=apollo

# LinkedIn MCP (DEPRECATED - Use Apollo.io instead)
# Requires linkedin-mcp-server to be configured via Docker MCP:
#   1. docker mcp server enable linkedin-mcp-server
#   2. Get your li_at cookie from linkedin.com (DevTools > Application > Cookies)
#   3. docker mcp secret set linkedin-mcp-server.cookie=<your_li_at_cookie>
# Set to 'false' to disable LinkedIn enrichment even if MCP is configured
LINKEDIN_ENABLED=false
